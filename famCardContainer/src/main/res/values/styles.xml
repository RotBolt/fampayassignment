<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SmallDisplayTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="SmallDisplayDescription">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="BigDisplayTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="BigDisplayDescription">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="BigDisplayActionButton">
        <item name="android:background">@drawable/round_bg</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="textAllCaps">false</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">@dimen/measure_16_dp</item>
    </style>
</resources>